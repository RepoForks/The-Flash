<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:itemTextAppearance">@style/MenuItemText</item>
        <item name="colorControlNormal">?colorAccent</item>
        <item name="colorControlHighlight">?colorAccent</item>
        <item name="actionModeBackground">?colorPrimary</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.Base">
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:windowBackground">@drawable/splash_screen_drawable</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">?colorAccent</item>
    </style>

    <style name="ErrorTextStyle" parent="TextAppearance.Design.Error">
        <item name="android:textSize">@dimen/desc_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HintTextStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/desc_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MenuItemText">
        <item name="android:textColor">?colorPrimary</item>
        <item name="colorControlNormal">?colorAccent</item>
        <item name="colorControlHighlight">?colorAccent</item>
    </style>
</resources>
